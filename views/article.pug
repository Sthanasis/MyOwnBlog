extends home

block content
    main
        div.flexContainer
            div.article
                div.articleHeader
                    span=article.title
                div
                    span=article.content
                div.articleFooter
                    div(style="display: flex; justify-content:space-between;")
                        span=article.author
                        span -
                        span=article.date
                    if user
                        if user.name === article.author
                            div.articleOptions
                                a.button(href="#") Edit Article
                                a.button(href="#") Delete Article
                    a.button(href="/") Go Back
