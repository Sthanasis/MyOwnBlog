header.header
    nav
        div#logo
            img(src='/img/blog-logo.svg' alt='MyOwnBlog logo')
            a(href='/') MyBlog
        div#signContainer
            if user
                div.profileContainer
                    img.profilePicture(src=`/img/users/${user.image}`)
                    span.username=user.name
                div
                    a#createArticle.button(href="/createNewArticle") Create Article
                    a#logout.button(href="#") Logout
            else
                a.button(href="/login") Log In
                a.button(href="/signup") Sign Up